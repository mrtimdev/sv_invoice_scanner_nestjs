{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
     "assets": [
      {
        "include": "../node_modules/jquery/dist/**/*",
        "outDir": "./dist/public/assets/jquery"
      },
      {
        "include": "../node_modules/bootstrap/dist/**/*",
        "outDir": "./dist/public/assets/bootstrap"
      },
      {
        "include": "../node_modules/datatables.net/**/*",
        "outDir": "./dist/public/assets/datatables.net"
      },
      {
        "include": "../node_modules/datatables.net-dt/**/*",
        "outDir": "./dist/public/assets/datatables.net-dt"
      }
    ],
    "watchAssets": true
  }
}
