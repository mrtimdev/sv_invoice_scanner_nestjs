<script src="/assets/datatables.net/js/dataTables.min.js"></script>


    <script>
        $(document).ready(function() {
            $('#scansTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: '/admin/scans/data',
                columns: [
                    { 
                        // Index column (1, 2, 3...)
                        data: null,
                        render: function(data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        },
                        orderable: false,
                        width: '5%'
                    },
                    { 
                        data: 'imagePath',
                        render: function(data) {
                            return data ? 
                                `<img src="${data}" class="scan-thumbnail" style="max-height: 50px;">` : 
                                'No image';
                        },
                        orderable: false,
                        width: '15%'
                    },
                    { 
                        data: 'scannedText',
                        render: function(data) {
                            // Truncate text longer than 30 characters
                            const truncated = data.length > 30 ? 
                                data.substr(0, 30) + '...' : data;
                            return `<span class="truncated-text" title="${data}">${truncated}</span>`;
                        },
                        searchable: false,
                        orderable: false,
                        width: '30%'
                    },
                    { 
                        data: 'date',
                        render: function(data) {
                            return new Date(data).toLocaleDateString();
                        },
                        width: '15%'
                    },
                    {
                    // This is the action column that renders your buttons
                    data: 'id', // Use 'id' from the data to construct the links
                    title: 'Actions', // Title for the actions column
                    render: function(data, type, row) {
                        const encodedRowData = btoa(encodeURIComponent(JSON.stringify(row)));
                        console.log({encodedRowData})
                        return `
                            <div class="relative" x-data="{ open: false }" @click.away="open = false">
                                <button @click="open = !open" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    Actions
                                    <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </button>

                                <div x-show="open" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95"
                                    class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-10">
                                    <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
                                        <button
                                            @click="
                                                const rowData = JSON.parse(decodeURIComponent(atob('${encodedRowData}')));
                                                $dispatch('open-image-modal', rowData);
                                                open = false;
                                            "
                                            class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                                            role="menuitem"
                                        >
                                            View File
                                        </button>
                                        <a href="/admin/scans/${data}/download" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" role="menuitem">Download File</a>
                                    </div>
                                </div>
                            </div>
                        `;
                    },
                        orderable: false,
                        width: '10%'
                    }
                ],
                order: [[3, 'desc']], // Default sort by date descending
                dom: '<"top"lf>rt<"bottom"ip>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search scans...",
                    lengthMenu: "Show _MENU_ scans per page"
                },
                responsive: true,
            });

            // Copy text functionality
            $(document).on('click', '.copy-btn', function() {
                const text = $(this).data('text');
                navigator.clipboard.writeText(text)
                    .then(() => {
                        $(this).html('<i class="fas fa-check"></i>');
                        setTimeout(() => {
                            $(this).html('<i class="fas fa-copy"></i>');
                        }, 2000);
                    })
                    .catch(err => console.error('Could not copy text: ', err));
            });
        });

        document.addEventListener('open-image-modal', function (event) {
        // Get the element with the specific ID
        const modalAppElement = document.getElementById('app-modal-state');
        if (modalAppElement) {
            const app = Alpine.$data(modalAppElement);
            if (app) {
                console.log({event})
                // The entire row data is now in event.detail
                const imagePath = event.detail.imagePath;
                const date = event.detail.date;
                app.modalImageUrl = `${imagePath}`;
                app.downloadLink = ` /admin/scans/${event.detail.id}/download`
                if (date) {
                    const scanDate = new Date(date);
                    // Use toLocaleString for a user-friendly date and time format
                    app.modalTitle = scanDate.toLocaleDateString(undefined, {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: true 
                    });
                } else {
                    app.modalTitle = ''; 
                }
                app.showModal = true;
            }
        }
    });
    </script>
