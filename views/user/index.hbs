        }
        .checkbox-label {
            @apply ml-2 block text-sm text-gray-900;
        }
        .checkbox-input {
            @apply h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500;
        }
        .error-message {
            @apply mt-1 text-sm text-red-600;
        }
    </style>
