    "@types/datatables.net": "^1.10.28",
    "@types/express": "^5.0.0",
    "@types/hbs": "^4.0.5",
    "@types/jest": "^29.5.14",
    "@types/jquery": "^3.5.32",
    "@types/ms": "^2.1.0",
