    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "datatables.net": "^2.3.2",
    "datatables.net-bs5": "^2.3.2",
    "datatables.net-dt": "^2.3.2",
    "express-handlebars": "^8.0.2",
    "express-session": "^1.18.1",
